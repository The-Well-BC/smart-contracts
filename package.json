{
  "dependencies": {
    "@ensdomains/ens-contracts": "^0.0.4",
    "@ethereum-waffle/ens": "^3.3.0",
    "@ethereum-waffle/provider": "^3.4.0",
    "@openzeppelin/contracts": "^4.1.0",
    "@truffle/hdwallet-provider": "1.2.3",
    "openzeppelin-2.5": "npm:@openzeppelin/contracts@v2.5"
  },
  "scripts": {
    "abi": "solc @openzeppelin/=$(pwd)/node_modules/@openzeppelin/ --abi contracts/*.sol -o abis",

    "test-chain": "ganache-cli --defaultBalanceEther 90000000000000000000 -i 1337 -p 9545",
    "dev-chain": "ganache-cli --defaultBalanceEther 900 -i 1337 -p 8545 -m 'much lend accuse door can mixture original orient journey spice afraid wire'",
    "test:contracts": "nodemon -e js,sol --ignore 'client/' --exec 'truffle test --network test --show-events'",
    "ropsten:migrate": ". ./.env.local && npx truffle migrate --network ropsten",
    "ropsten:migrate:reset": ". ./.env.local && npx truffle migrate --reset --network ropsten",
    "ropsten:console": ". ./.env.local && npx truffle console --network ropsten"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eth-ens-namehash": "^2.0.8",
    "nodemon": "^2.0.7",
    "truffle-plugin-verify": "^0.5.9"
  }
}
